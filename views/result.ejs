<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="app.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <main class="result" 
        style="margin: 15rem 20rem; 
            width: 25rem; height: 15rem;
            background-color: rgb(253, 226, 226); 
            padding: 2rem 3.5rem;
            border-radius: .5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            ">
        <h2 class="result__header"> Outcome </h2>
        <div class="result__contaiiner">
            <% if(value == 0) { %>
                <p class="result">Finished checking your credentials with out trained model, click below to see result</p>
                <button 
                    style="margin-top: 1rem;
                        font-size: 4rem;
                        text-transform: uppercase;
                        padding: .6rem 2rem;
                        border-radius: 10rem;
                        transition: all .2s;
                        position: relative;
                        font-size: .7rem;
                        color: #fff;
                        background-color: rgb(48, 114, 212);"
                        onclick="showFailedAlert()">See Result</button>
            <% } else { %>
                <p class="result">Finished checking your credentials with out trained model, click below to see result</p>
                <button 
                    style="margin-top: 1rem;
                    font-size: 4rem;
                    text-transform: uppercase;
                    padding: .6rem 2rem;
                    border-radius: 10rem;
                    transition: all .2s;
                    position: relative;
                    font-size: .7rem;
                    color: #fff;
                    background-color: rgb(48, 114, 212);"
                    onclick="showSuccessAlert()">See Result
                </button>
            <% } %>
        </div>
    </main>

    <script>
        // if user profile passes, call success
        function showSuccessAlert() {
            Swal.fire({
                icon: 'error',
                title: 'Attrition level threat',
                text: 'Employee will be leaving current company'
            });
        }

        // otherwise, call failed function
        function showFailedAlert() {
            Swal.fire({
                icon: 'success',
                title: 'Safe! Attrition passed',
                text: 'Employee will not be leaving'
            })
        }
    </script>
</body>
</html>